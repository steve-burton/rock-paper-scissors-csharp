<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
		<title>Rock, Paper, Scissors</title>
	</head>
	<body>
		<div class="container">
			<div class="jumbotron">
				<h1>Rock, Paper, Scissors</h1>
			</div>
      @{
        var player1Img = "/Content/img/" + @Model.GetPlayer1Choice() + ".jpg";
        var player2Img = "/Content/img/" + @Model.GetPlayer2Choice() + ".jpg";
      }
      <div class="row">
        <div class="col-md-6 resultDiv">
          @Model.GetPlayer1Name() chose:<br>
          <img src="@player1Img">
        </div>
        <div class="col-md-6 resultDiv">
          @Model.GetPlayer2Name() chose:<br>
          <img src="@player2Img">
        </div>
      </div>
			<div class="row">
				<div class="col-md-12 buttonDiv">
					<h1>@Model.GetWinner()</h1>
          <a href="/">Start a new game.</a>
				</div>
			</div>
		</div>
	</body>
</html>
